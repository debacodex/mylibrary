<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PhotoView">
        <attr name="pv_crop_width" format="dimension" />
        <attr name="pv_crop_height" format="dimension" />
        <attr name="pv_crop_output_width" format="dimension" />
        <attr name="pv_crop_output_height" format="dimension" />
        <attr name="pv_crop_dim_color" format="color" />
        <attr name="pv_crop_enabled" format="boolean" />
        <attr name="pv_crop_border_color" format="color" />
        <attr name="pv_crop_border_size" format="dimension" />
        <attr name="pv_crop_shape" format="enum">
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <attr name="pv_crop_allow_overscroll" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="pgv_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="pgv_color" format="color" />
    </declare-styleable>
</resources>